#!/bin/bash

if [ "$(light -L | awk -F '/' '{print $2}' | grep backlight)" = '' ];then
	echo ''
	exit 0
fi

a=$(light)
a=${a%.*}

if [ $a -ge 81 ];then
icon='ðŸŒ‘'
elif [ $a -ge 61 ];then
icon='ðŸŒ’'
elif [ $a -ge 41 ];then
icon='ðŸŒ“'
elif [ $a -ge 21 ];then
icon='ðŸŒ”'
else
icon='ðŸŒ•'
fi

echo $icon' '$a'%'
