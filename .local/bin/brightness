#!/bin/bash

a=$(xbacklight -get)
if [ "$a" = "No outputs have backlight property" ];then
	echo ''
	exit 0
fi

a=${a%.*}

if [ $a -ge 81 ];then
icon='ğŸŒ‘'
elif [ $a -ge 61 ];then
icon='ğŸŒ’'
elif [ $a -ge 41 ];then
icon='ğŸŒ“'
elif [ $a -ge 21 ];then
icon='ğŸŒ”'
else
icon='ğŸŒ•'
fi

echo $icon' '$a'%'
